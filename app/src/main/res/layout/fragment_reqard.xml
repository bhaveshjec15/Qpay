<?xml version="1.0" encoding="utf-8"?>
<layout>
  <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".activity.RewardActivity"
      android:id="@+id/mainLayout"
      android:background="@drawable/bg_common"
      >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="@dimen/_10sdp"
            >

          <ImageView
              android:layout_width="@dimen/_15sdp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:id="@+id/iv_back"
              android:src="@drawable/ic__back_arrow"
              />
          <com.google.android.material.textview.MaterialTextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:gravity="center"
              android:text="Reward"
              android:textColor="@color/colorGray"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            android:background="@drawable/bg_btn"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_10sdp">

          <LinearLayout
              android:layout_width="0dp"
              android:layout_weight="1.3"
              android:layout_marginRight="@dimen/_5sdp"
              android:orientation="vertical"
              android:layout_marginLeft="@dimen/_10sdp"
              android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_icon_refer"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Rewards Points"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="1000"
                android:id="@+id/tvPoints"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:text="Redeem"
                android:id="@+id/btnRedeem"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/colorBtn"
                android:background="@drawable/bg_redeem"/>
          </LinearLayout>
          <LinearLayout
              android:layout_width="0dp"
              android:layout_weight="0.7"
              android:orientation="vertical"
              android:background="@drawable/img"
              android:layout_margin="@dimen/_10sdp"
              android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_refer_two"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_refer_three"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:text="Redeem"
                android:gravity="center"
                android:id="@+id/layout_refer"
                android:textColor="@color/white"
                android:background="@drawable/ic_refer_five"
                android:layout_margin="@dimen/_5sdp">
              <ImageView
                  android:layout_width="@dimen/_20sdp"
                  android:layout_height="@dimen/_20sdp"
                  android:layout_gravity="center"
                  android:src="@drawable/ic_right_arrow_new"/>

            </LinearLayout>

          </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_550sdp"
            android:src="@drawable/ic_refer_info"/>
      </LinearLayout>

    </ScrollView>

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>