<?xml version="1.0" encoding="utf-8"?>
<layout>
  <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/bg_common"
      android:id="@+id/mainLayout"
      tools:context=".rechargePrepad.AllPlansActivity"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          android:orientation="horizontal"
          android:padding="@dimen/_10sdp"
          android:weightSum="2"
          >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:src="@drawable/ic__back_arrow"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_weight="1.7"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="@string/mobile_recharge"
            android:textColor="@color/colorGray"
            />
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_bbps"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/_40sdp"
          android:orientation="horizontal"
          android:weightSum="2"
          >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="0.2"
            android:src="@drawable/ic_bbps"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:orientation="vertical"
            >

          <TextView
              android:id="@+id/tvNumber"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:ellipsize="end"
              android:gravity="center_vertical"
              android:padding="@dimen/_5sdp"
              android:text="name"
              android:textStyle="bold"
              android:textColor="@color/colorBlack"
              />

        </LinearLayout>

      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/_1sdp"
          android:layout_margin="@dimen/_10sdp"
          android:background="@color/colorDividerDark"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/_40sdp"
          android:orientation="horizontal"
          android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/border_spinner"
            android:layout_marginRight="@dimen/_5sdp">

          <Spinner
              android:id = "@+id/spn_company"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent"
              android:prompt = "@string/app_name"
              />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/border_spinner"
            android:layout_marginRight="@dimen/_5sdp">

          <Spinner
              android:id = "@+id/spn_state"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent"
              android:prompt = "@string/app_name"
              />

        </LinearLayout>



      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/_1sdp"
          android:layout_margin="@dimen/_10sdp"
          android:background="@color/colorDividerDark"
          />

      <HorizontalScrollView
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/_40sdp"
          android:orientation="horizontal">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:id="@+id/tvComboPack"
           android:text="COMBO PACK"
           android:layout_gravity="center"
           android:gravity="center"
           android:textColor="@color/colorBlack"
           android:padding="@dimen/_5sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tvFullTalkTime"
            android:text="FULL TALKTIME"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:padding="@dimen/_5sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tvInternational"
            android:text="INTERNATIONAL ROAMING"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:padding="@dimen/_5sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tvInternet"
            android:text="INTERNET PACK"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:padding="@dimen/_5sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tvSpecial"
            android:text="SPECIAL RECHARGE"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:padding="@dimen/_5sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tvAll"
            android:text="All"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:padding="@dimen/_5sdp"/>

      </LinearLayout>

      </HorizontalScrollView>

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rvComboList"
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:visibility="visible"
          tools:listitem="@layout/item_combo_pack"
          app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
          />
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rvAllList"
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:visibility="gone"
          tools:listitem="@layout/item_fastag_biller"
          app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
          />
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rvFullTalkTimeList"
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:visibility="gone"
          tools:listitem="@layout/item_fastag_biller"
          app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
          />
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rvInternationalList"
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:visibility="gone"
          tools:listitem="@layout/item_fastag_biller"
          app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
          />
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rvInternetList"
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:visibility="gone"
          tools:listitem="@layout/item_fastag_biller"
          app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
          />
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rvSpecialList"
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:visibility="gone"
          tools:listitem="@layout/item_fastag_biller"
          app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
          />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>