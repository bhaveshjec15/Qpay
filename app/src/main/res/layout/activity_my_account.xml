<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:background="@drawable/bg_common"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        >

      <ImageView
          android:layout_width="@dimen/_20sdp"
          android:id="@+id/iv_back"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_5sdp"
          android:src="@drawable/ic__back_arrow"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:layout_marginStart="@dimen/_10sdp"
          android:gravity="center_vertical"
          android:text="My Account"
          android:textColor="@color/colorBlack"
          />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/_10sdp"
              android:layout_marginStart="@dimen/_10sdp"
              android:layout_marginTop="@dimen/_40sdp"

              >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                >
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/_30sdp"
                  android:orientation="vertical"
                  >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/tv_name"
                    android:text="Same Jhan"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/tv_phone"
                    android:text="+91 9876543219"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_gravity="center"
                    android:id="@+id/ivQRCode"
                    android:layout_marginTop="@dimen/_10sdp"
                    />
                <TextView
                    android:id="@+id/tvInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="Anyone can scan this QR or send money to you on 9876543210. You will receive money in your default bank account (ICICI Bank - 1301)"
                    android:textColor="@color/colorBlack"
                    />
              </LinearLayout>
            </androidx.cardview.widget.CardView>


          </LinearLayout>
          <de.hdodenhof.circleimageview.CircleImageView
              android:id="@+id/iv_profile"
              android:layout_width="@dimen/_50sdp"
              android:layout_height="@dimen/_50sdp"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="@dimen/_10sdp"
              android:src="@drawable/ic_profile"
              app:civ_border_color="@color/colorBtn"
              app:civ_border_width="@dimen/_1sdp"
              />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/ivShare"
            android:padding="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_share"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:weightSum="2"
                >
              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="0.3"
                  >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_q"
                    />

              </LinearLayout>

              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_gravity="center_vertical"
                  android:layout_weight="1"
                  android:gravity="center_vertical"
                  android:orientation="vertical"
                  >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_5sdp"
                    android:text="Qpay Wallet"
                    android:textColor="@color/colorBlack"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_5sdp"
                    android:text="Available Balance"
                    />

              </LinearLayout>
              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_gravity="center"
                  android:layout_weight="0.7"
                  android:gravity="center"
                  android:orientation="horizontal"
                  >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_5sdp"
                    android:text="\u20B9"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingStart="@dimen/_2sdp"
                    android:text="20000"
                    android:id="@+id/currentBalance"
                    android:textColor="@color/colorBtn"
                    />

              </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_profile_tag"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Refer &amp; Earn"
                android:textColor="@color/colorWhite"
                />

          </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal"
                android:id="@+id/layout_update"
                android:padding="@dimen/_5sdp"
                >
              <ImageView
                  android:layout_width="@dimen/_15sdp"
                  android:layout_height="@dimen/_15sdp"
                  android:src="@drawable/ic_update_profile"
                  android:layout_gravity="center"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:text="Update Profile"
                  android:textColor="@color/colorBlack"
                  android:layout_marginStart="@dimen/_10sdp"
                  android:layout_gravity="center"
                  android:textStyle="bold"
                  android:gravity="center_vertical"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorDivider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal"
                android:id="@+id/layout_about"
                android:padding="@dimen/_5sdp"
                >
              <ImageView
                  android:layout_width="@dimen/_15sdp"
                  android:layout_height="@dimen/_15sdp"
                  android:src="@drawable/ic_q"
                  android:layout_gravity="center"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:text="About Qpay"
                  android:textStyle="bold"
                  android:textColor="@color/colorBlack"
                  android:layout_marginStart="@dimen/_10sdp"
                  android:layout_gravity="center"
                  android:gravity="center_vertical"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorDivider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal"
                android:id="@+id/layout_add_money"
                android:padding="@dimen/_5sdp"
                >
              <ImageView
                  android:layout_width="@dimen/_15sdp"
                  android:layout_height="@dimen/_15sdp"
                  android:src="@drawable/ic_add_money"
                  android:layout_gravity="center"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:text="Add Money To Wallet"
                  android:textStyle="bold"
                  android:textColor="@color/colorBlack"
                  android:layout_marginStart="@dimen/_10sdp"
                  android:layout_gravity="center"
                  android:gravity="center_vertical"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorDivider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal"
                android:id="@+id/layout_kyc"
                android:padding="@dimen/_5sdp"
                >
              <ImageView
                  android:layout_width="@dimen/_15sdp"
                  android:layout_height="@dimen/_15sdp"
                  android:src="@drawable/ic_q"
                  android:layout_gravity="center"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:text="KYC Status"
                  android:textStyle="bold"
                  android:textColor="@color/colorBlack"
                  android:layout_marginStart="@dimen/_10sdp"
                  android:layout_gravity="center"
                  android:layout_weight="1"
                  android:gravity="center_vertical"/>

              <ImageView
                  android:id="@+id/iv_kycStatus"
                  android:layout_width="@dimen/_10sdp"
                  android:layout_height="@dimen/_10sdp"
                  android:layout_gravity="center"
                  android:visibility="gone"
                  android:src="@drawable/ic_tick_svgrepo_com"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorDivider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal"
                android:id="@+id/layout_logout"
                android:padding="@dimen/_5sdp"
                >
              <ImageView
                  android:layout_width="@dimen/_15sdp"
                  android:layout_height="@dimen/_15sdp"
                  android:src="@drawable/ic_logout"
                  android:layout_gravity="center"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:text="Logout"
                  android:textStyle="bold"
                  android:textColor="@color/colorRed"
                  android:layout_marginStart="@dimen/_10sdp"
                  android:layout_gravity="center"
                  android:gravity="center_vertical"/>

            </LinearLayout>

          </LinearLayout>
        </androidx.cardview.widget.CardView>

      </LinearLayout>
    </ScrollView>

  </LinearLayout>

</layout>
