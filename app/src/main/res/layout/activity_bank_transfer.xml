<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_common"
    android:id="@+id/mainLayout"
    tools:context=".activity.BankTransferActivity"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        >

      <ImageView
          android:layout_width="@dimen/_15sdp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:id="@+id/iv_back"
          android:src="@drawable/ic__back_arrow"
          />
      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="Bank Transfer"
          android:textColor="@color/colorGray"
          />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/layoutAddBank"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp">

      <ImageView
          android:layout_width="@dimen/_70sdp"
          android:layout_height="@dimen/_70sdp"
          android:layout_gravity="center"
          android:src="@drawable/ic_add_bank"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/_10sdp"
          android:text="Please add bank account for using bank benifits."/>
      <Button
          android:id="@+id/btnSubmit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="@dimen/_20sdp"
          android:layout_marginLeft="@dimen/_20sdp"
          android:layout_marginRight="@dimen/_20sdp"
          android:background="@drawable/bg_btn"
          android:foreground="?android:attr/selectableItemBackground"
          android:text="Add Bank"
          android:textColor="@color/colorWhite"
          />

    </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/layoutBankItem"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_margin="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:weightSum="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

          <TextView
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="0.7"
              android:gravity="center_vertical"
              android:layout_gravity="center_vertical"
              android:text="Account Number: "/>
          <TextView
              android:id="@+id/tvBankName"
              android:layout_width="0dp"
              android:gravity="center_vertical"
              android:textColor="@color/colorBlack"
              android:layout_height="match_parent"
              android:layout_weight="1.3"
              android:layout_gravity="center_vertical"
              android:text="Bank Name"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:weightSum="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

          <TextView
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="0.7"
              android:gravity="center_vertical"
              android:layout_gravity="center_vertical"
              android:text="IFSC Code: "/>
          <TextView
              android:id="@+id/tvCode"
              android:layout_width="0dp"
              android:gravity="center_vertical"
              android:textColor="@color/colorBlack"
              android:layout_height="match_parent"
              android:layout_weight="1.3"
              android:layout_gravity="center_vertical"
              android:text="Bank Name"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:weightSum="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

          <TextView
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="0.7"
              android:gravity="center_vertical"
              android:layout_gravity="center_vertical"
              android:text="City: "/>
          <TextView
              android:id="@+id/tvCity"
              android:layout_width="0dp"
              android:gravity="center_vertical"
              android:textColor="@color/colorBlack"
              android:layout_height="match_parent"
              android:layout_weight="1.3"
              android:layout_gravity="center_vertical"
              android:text="Bank Name"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:weightSum="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

          <TextView
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="0.7"
              android:gravity="center_vertical"
              android:layout_gravity="center_vertical"
              android:text="State: "/>
          <TextView
              android:id="@+id/tvState"
              android:layout_width="0dp"
              android:gravity="center_vertical"
              android:textColor="@color/colorBlack"
              android:layout_height="match_parent"
              android:layout_weight="1.3"
              android:layout_gravity="center_vertical"
              android:text="Bank Name"/>


        </LinearLayout>

      </LinearLayout>

    </androidx.cardview.widget.CardView>


  </LinearLayout>
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/bg_btn"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Delete Bank"
        android:visibility="gone"
        android:textColor="@color/colorWhite"
        />
  </RelativeLayout>
  <ProgressBar
      android:id="@+id/progress"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:visibility="gone"
      />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>